<UserControl x:Class="P2PChat.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ListView ItemsSource="{Binding Messages}" >
        <ListView.ItemTemplate>
        <DataTemplate>
            <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Text}" HorizontalAlignment="Stretch" TextWrapping="WrapWithOverflow" FontFamily="Arial" FontSize="14"/>
                <Label Content="{Binding Signature}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" Margin="1,-5,1,1" FontSize="10"/>
            </StackPanel>
        </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
